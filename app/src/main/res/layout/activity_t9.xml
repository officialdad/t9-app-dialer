<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="100dp"
    app:cardBackgroundColor="@color/black_pure"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/border_gray">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/black_pure">

    <!-- Top 3 Apps (Horizontal, Centered) - Fixed height area -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scrollbars="none"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/appsContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">
            <!-- App items will be added programmatically -->
        </LinearLayout>
    </HorizontalScrollView>

    <!-- T9 Keyboard (3x3 grid, buttons 1-9 only) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row 1: 1, 2, 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1"
                style="@style/T9Key.Clear"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="1\nCLEAR"
                android:foreground="@drawable/button_ripple_red"
                android:clickable="true"
                android:focusable="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2"
                style="@style/T9Key"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="2\nABC"
                android:foreground="@drawable/button_ripple"
                android:clickable="true"
                android:focusable="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3"
                style="@style/T9Key"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="3\nDEF"
                android:foreground="@drawable/button_ripple"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Row 2: 4, 5, 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn4"
                style="@style/T9Key"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="4\nGHI"
                android:foreground="@drawable/button_ripple"
                android:clickable="true"
                android:focusable="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn5"
                style="@style/T9Key"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="5\nJKL"
                android:foreground="@drawable/button_ripple"
                android:clickable="true"
                android:focusable="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn6"
                style="@style/T9Key"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="6\nMNO"
                android:foreground="@drawable/button_ripple"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Row 3: 7, 8, 9 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn7"
                style="@style/T9Key"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="7\nPQRS"
                android:foreground="@drawable/button_ripple"
                android:clickable="true"
                android:focusable="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn8"
                style="@style/T9Key"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="8\nTUV"
                android:foreground="@drawable/button_ripple"
                android:clickable="true"
                android:focusable="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn9"
                style="@style/T9Key"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="9\nWXYZ"
                android:foreground="@drawable/button_ripple"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</com.google.android.material.card.MaterialCardView>
